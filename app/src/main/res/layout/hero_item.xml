<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/score_background"
    android:elevation="8dp"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="16dp"
    android:paddingEnd="24dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/imageViewHero"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="la-la"
                app:srcCompat="@drawable/back_3" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:fontFamily="@font/squid_game"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="0"
            android:textColor="@color/color_5"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cursor_icon" />

            <TextView
                android:id="@+id/textViewClick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/squid_game"
                android:gravity="center"
                android:paddingStart="4dp"
                android:text="x 1"
                android:textColor="@color/color_2"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewIsBuy"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="0"
            android:contentDescription="la-la"
            android:visibility="gone"
            app:srcCompat="@drawable/done_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewHeroName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/squid_game"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Кактус"
        android:textColor="@color/color_5"
        android:textSize="24sp" />

</LinearLayout>